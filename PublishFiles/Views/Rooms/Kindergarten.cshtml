@{
    ViewBag.Title = "Rooms";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" id="content">
    <div class="banner" id="Cover"><img src="~/Content/img/photos/final/kindybanner.jpg" /></div>
    <div id="Kindergarten" class="col-lg-12 text-block Rooms">
        <h2>Kindergarten</h2>
        <table>
            <tr>
                <td>
                    <p>Our Kindy room is an integrated Department for Education approved Preschool which provides the flexibility to utilise the long day care hours. There is a reduced preschool fee (Universal Access) that is available within specific times for children to access in the year before starting school. The kindy programme is designed to incorporate children’s interests and strengths and follows the Australian Early Years Framework.</p>
                    <img src="~/Content/img/photos/final/kindy1.jpg" />
                </td>
                <td>
                    <span id="KindergartenPDF">
                    </span>
                    <a class="link link--arrowed" href="~/Content/RoomHandBooks/GWCC_Kindergarten_Handbook.pdf" target="_blank">
                        <section class="centered-container">
                            Click here to download the Handbook
                            <svg class="arrow-icon" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 32 32">
                                <g fill="none" stroke="#477C7F" stroke-width="1.5" stroke-linejoin="round" stroke-miterlimit="10">
                                    <circle class="arrow-icon--circle" cx="16" cy="16" r="15.12"></circle>
                                    <path class="arrow-icon--arrow" d="M16.14 9.93L22.21 16l-6.07 6.07M8.23 16h13.98"></path>
                                </g>
                            </svg>
                        </section>
                    </a>
                </td>

            </tr>
        </table>
    </div>
</div>

<script>
    //window.location.host
    host = (window.location.host.indexOf("localhost") >= 0) ? "http://gwcc.ha11.com.au/" : window.location.host;

    KindergartenUrl = (host + "/Content/RoomHandBooks/GWCC_Kindergarten_Handbook.pdf");
    $("#KindergartenPDF").html('<embed src="https://drive.google.com/viewerng/viewer?embedded=true&url=' + KindergartenUrl + '">');
</script>