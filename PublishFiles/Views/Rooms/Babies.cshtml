@{
    ViewBag.Title = "Rooms";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" id="content">
    <div class="banner" id="Cover"><img src="~/Content/img/photos/final/babiesbanner.jpg" /></div>
    <div id="Babies" class="col-lg-12 text-block Rooms">
        <h2>Babies</h2>
        <table>
            <tr>
                <td>
                    <p>You will receive a very warm welcome when you step into our Baby Room. With a maximum of only 8 babies, the environment is a calm and nurturing space that provides high quality care and education to babies from 6 weeks up to 2 years of age. The two permanent Educators are very experienced with supporting both children and families to settle in and begin building secure relationships.</p>
                    <img src="~/Content/img/photos/final/babiespic.jpg" />
                </td>
                <td>
                    <span id="BabyroomPDF">
                    </span>
                    <a class="link link--arrowed" href="~/Content/RoomHandBooks/GWCC_Babies_Handbook.pdf" target="_blank">
                        <section class="centered-container">
                            Click here to download the Handbook
                            <svg class="arrow-icon" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 32 32">
                                <g fill="none" stroke="#477C7F" stroke-width="1.5" stroke-linejoin="round" stroke-miterlimit="10">
                                    <circle class="arrow-icon--circle" cx="16" cy="16" r="15.12"></circle>
                                    <path class="arrow-icon--arrow" d="M16.14 9.93L22.21 16l-6.07 6.07M8.23 16h13.98"></path>
                                </g>
                            </svg>
                        </section>
                    </a>
                </td>

            </tr>
        </table>
    </div>
</div>

<script>
    //window.location.host
    host = (window.location.host.indexOf("localhost") >= 0) ? "http://gwcc.ha11.com.au/" : window.location.host;
    BabyroomUrl = (host + "/Content/RoomHandBooks/GWCC_Babies_Handbook.pdf");

    $("#BabyroomPDF").html('<embed src="https://drive.google.com/viewerng/viewer?embedded=true&url=' + BabyroomUrl + '">');
</script>