@{
    ViewBag.Title = "Rooms";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" id="content">
    <div class="banner" id="Cover"><img src="~/Content/img/photos/final/jnrkindybanner.jpg" /></div>
    <div id="JuniorKindy" class="col-lg-12 text-block Rooms">
        <h2>Junior Kindy</h2>
        <table>
            <tr>
                <td>
                    <p>Our Junior Kindy room provides a vibrant, engaging room full of wonderful learning opportunities. Children from 2 ½ - 3 ½ years old enjoy the home corner, literacy table and maths shelf where they can self-select and explore concepts supported by talented and highly experienced Educators.</p>
                    <img src="~/Content/img/photos/final/jnrkindypic.jpg" />
                </td>
                <td>
                    <span id="JuniorPDF">
                    </span>
                    <a class="link link--arrowed" href="~/Content/RoomHandBooks/GWCC_Junior_Kindy_Handbook.pdf" target="_blank">
                        <section class="centered-container">
                            Click here to download the Handbook
                            <svg class="arrow-icon" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 32 32">
                                <g fill="none" stroke="#477C7F" stroke-width="1.5" stroke-linejoin="round" stroke-miterlimit="10">
                                    <circle class="arrow-icon--circle" cx="16" cy="16" r="15.12"></circle>
                                    <path class="arrow-icon--arrow" d="M16.14 9.93L22.21 16l-6.07 6.07M8.23 16h13.98"></path>
                                </g>
                            </svg>
                        </section>
                    </a>
                </td>

            </tr>
        </table>
    </div>
</div>

<script>
    //window.location.host
    host = (window.location.host.indexOf("localhost") >= 0) ? "http://gwcc.ha11.com.au/" : window.location.host;
    JuniorUrl = (host + "/Content/RoomHandBooks/GWCC_Junior_Kindy_Handbook.pdf");
    KindergartenUrl = (host + "/Content/RoomHandBooks/GWCC_Kindergarten_Handbook.pdf");
    NurseryUrl = (host + "/Content/RoomHandBooks/GWCC_Nursery_Handbook.pdf");
    BabyroomUrl = (host + "/Content/RoomHandBooks/GWCC_Babies_Handbook.pdf");

    $("#JuniorPDF").html('<embed src="https://drive.google.com/viewerng/viewer?embedded=true&url=' + JuniorUrl + '">');
    $("#KindergartenPDF").html('<embed src="https://drive.google.com/viewerng/viewer?embedded=true&url=' + KindergartenUrl + '">');
    $("#NurseryPDF").html('<embed src="https://drive.google.com/viewerng/viewer?embedded=true&url=' + NurseryUrl + '">');
    $("#BabyroomPDF").html('<embed src="https://drive.google.com/viewerng/viewer?embedded=true&url=' + BabyroomUrl + '">');
</script>