                                    @Html.ActionLink("Link to Map", "ContactUs", "ContactUs")
                                    @Html.ActionLink("Facebook", "ContactUs", "ContactUs")
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-4">
                    <div class="navbar-header">
