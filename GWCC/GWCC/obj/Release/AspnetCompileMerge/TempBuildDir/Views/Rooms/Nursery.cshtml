@{
    ViewBag.Title = "Rooms";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" id="content">
    <div class="banner" id="Cover"><img src="~/Content/img/photos/final/nurserybanner.jpg" /></div>
    <div id="Nursery" class="col-lg-12 text-block Rooms">
        <h2>Nursery</h2>
        <table>
            <tr>
                <td>
                    <p>Our Nursery room offers education and care for children aged from 2 years to 3 years old. Nursery provides an extension from Babies with a very stimulating and engaging curriculum. The children engage in ‘hands-on’ experiences and explore their world around them. They have an extra play space which provides an outdoor undercover area especially great for those wet weather days for active toddlers.</p>
                    <img src="~/Content/img/photos/final/nurserypic.jpg" />
                </td>
                <td>
                    <span id="NurseryPDF">
                    </span>
                    <a class="link link--arrowed" href="~/Content/RoomHandBooks/GWCC_Nursery_Handbook.pdf" target="_blank">
                        <section class="centered-container">
                            Click here for the handbook
                            <svg class="arrow-icon" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 32 32">
                                <g fill="none" stroke="#477C7F" stroke-width="1.5" stroke-linejoin="round" stroke-miterlimit="10">
                                    <circle class="arrow-icon--circle" cx="16" cy="16" r="15.12"></circle>
                                    <path class="arrow-icon--arrow" d="M16.14 9.93L22.21 16l-6.07 6.07M8.23 16h13.98"></path>
                                </g>
                            </svg>
                        </section>
                    </a>
                </td>

            </tr>
        </table>
    </div>
</div>

<script>
    //window.location.host
    host = (window.location.host.indexOf("localhost") >= 0) ? "http://gwcc.ha11.com.au/" : window.location.host;

    NurseryUrl = (host + "/Content/RoomHandBooks/GWCC_Nursery_Handbook.pdf");

    $("#NurseryPDF").html('<embed src="https://drive.google.com/viewerng/viewer?embedded=true&url=' + NurseryUrl + '">');
</script>