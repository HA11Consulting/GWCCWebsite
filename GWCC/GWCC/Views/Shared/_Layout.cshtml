<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GWCC - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <h1>
                    <img id="GGWCLogo" class="small" src="~/Content/img/Grey Ward Logo Cropped.PNG" alt="Grey Ward Children's Centre" />
                </h1>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-8">
                <div class="navbar-collapse collapse">
                    @Html.ActionLink("Grey Ward Children's Centre", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    <ul class="nav navbar-nav">
                        <li class="dropdown">
                            @Html.ActionLink("Home", "Index", "Home")
                            <div class="dropdown-content">
                                @Html.ActionLink("About us", "About", "Home")
                                @Html.ActionLink("History", "History", "Home")
                                @Html.ActionLink("FAQ", "FAQ", "Home")
                            </div>
                        </li>
                        <li>@Html.ActionLink("Parents and Caregivers", "ParentsInfo", "Parents")</li>
                        <li class="dropdown">@Html.ActionLink("Rooms", "Rooms", "Rooms")
                            <div class="dropdown-content">
                                @Html.ActionLink("Junior Kindy", "Rooms", "Rooms")
                                @Html.ActionLink("Kindergarten", "Rooms", "Rooms")
                                @Html.ActionLink("Nursery", "Rooms", "Rooms")
                                @Html.ActionLink("Babyroom", "Rooms", "Rooms")
                            </div>
                        </li>
                        <li class="dropdown">
                            @Html.ActionLink("Contact Us", "ContactUs", "ContactUs")
                            <div class="dropdown-content">
                                <a href="https://www.education.sa.gov.au/" target="_blank">Department for Education</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-4">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar">t</span>
                        <span class="icon-bar">d</span>
                        <span class="icon-bar">w</span>
                    </button>
                </div>

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="row">
                <div id="iconLinks">
                    <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12">
                        <u>Home</u>
                        <ul>
                            <li>About us</li>
                            <li>History</li>
                            <li>FAQ</li>
                        </ul>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12">
                        <u>For Parents and Caregivers</u>
                        <ul>
                            <li>What you need to know</li>
                            <li>What's on</li>
                            <li>Forms / Policies</li>
                        </ul>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12">
                        <u>Rooms</u>
                        <ul>
                            <li>Junior Kindy</li>
                            <li>Kindergarten</li>
                            <li>Nursery</li>
                            <li>Babyroom</li>
                        </ul>
                    </div>
                    <div class="col-lg-3 col-md-6 col-sm-6 col-xs-12">
                        <u>Contact Us</u>
                        <ul>
                            <li>Government site</li>
                        </ul>
                    </div>
                </div>
            </div>
            <p>&copy; @DateTime.Now.Year - Grey Ward Children's Centre</p>
        </footer>
    </div>

